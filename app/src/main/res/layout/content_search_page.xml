<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cz264.yelptest4.searchPageActivity"
    tools:showIn="@layout/activity_search_page">





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/business_Title"
        android:textSize="30dp"
        android:textAlignment="center"
        android:hint="Business Title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/business_Image"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/dealTitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical" />


        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dealTitle"
        android:textSize="25dp"
    android:textAlignment="center"
    android:hint="dealTitle"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/business_Title"
            android:layout_centerHorizontal="true" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false"
        android:layout_below="@+id/business_Image">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dealInfo"
        android:textSize="20dp"
        android:textAlignment="center"
        android:hint="dealInfo"
        android:layout_below="@+id/business_Image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
